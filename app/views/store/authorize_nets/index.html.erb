<div class="right-main">
<% if @store.authorize_net.blank? %>
  <div class="breadcrumb">
    <%= link_to 'Setup Authorize.Net', new_store_authorize_net_path,{:class=>"submit-button"} %>
  </div>
<% else %>

        		      <h2>Authorize.Net settings</h2> 
 
  <hr> 
  <h2>Current configuration</h2> 
  <p>Api Login ID: <%=@store.authorize_net.api_login_id%></p> 
  <p>Transaction Key: <%=@store.authorize_net.transaction_key%></p> 
  <p>Test Mode: <%=@store.authorize_net.test_mode%></p> 
  <hr> 
  <br> 
 
  <div class="breadcrumb"> 
    
    <%= link_to 'Edit',edit_store_authorize_net_path(@store.authorize_net),{:class=>"submit-button"} %> 
    <%= link_to 'Delete', store_authorize_net_path(@store.authorize_net),{:class=>"submit-button",:method => :delete} %>

  </div> 

    	</div>
    	
	</div>
	<%end%>
</div>
</div>

